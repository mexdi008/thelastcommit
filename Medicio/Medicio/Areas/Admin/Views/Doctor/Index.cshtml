@model List<Doctors>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Inverse table</h4>
            <div class="table-responsive pt-3">
                <table class="table table-white">
                    <thead>
                        <a asp-controller="doctor" asp-action="create" asp-area="admin">Add</a>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Duty
                            </th>
                            <th>
                                Image
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                    {
                        <tr>
                      <td>
                        @item.Id
                      </td>
                      <td>
                        @item.Name
                      </td>
                      <td>
                        @item.Duty
                      </td>
                      <td>
                        <img src="~/admin/images/@item.ImgUrl" alt="">
                      </td>
                      <td>
                          <a asp-controller="doctor" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                      </td>
                      <td>
                          <a asp-controller="doctor" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                      </td>
                    </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

